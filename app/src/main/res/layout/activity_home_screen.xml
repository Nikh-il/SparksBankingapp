<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/grey"
    android:orientation="vertical"
    tools:context=".UI.HomeScreen">

    <TextView
        android:id="@+id/bank_title"
        android:layout_width="366dp"
        android:layout_height="103dp"
        android:layout_gravity="center"
        android:gravity="center|start|end"
        android:text="Welcome To Sparks Bank"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
        android:textColor="#0A1867"
        android:textColorHighlight="#FF9800"
        android:textSize="34sp"
        android:textStyle="bold|italic"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/bank_logo"
        android:layout_width="360dp"
        android:layout_height="335dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/pngtree_banking_logo_png_image_4113119" />

    <Button
        android:id="@+id/account_holder"
        android:layout_width="190dp"
        android:layout_height="93dp"
        android:layout_gravity="center"
        android:onClick="showAllUsers"
        android:text="Account holder"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <Button
        android:id="@+id/recent_transactions"
        android:layout_width="240dp"
        android:layout_height="99dp"
        android:layout_gravity="center"
        android:onClick="showAllTransactions"
        android:text="Recent Transactions"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
</LinearLayout>